TESTS += litecoinz-gtest
noinst_PROGRAMS += litecoinz-gtest

# tool for generating our public parameters.
# test_checktransaction.cpp MUST be before
# any test that calls SelectParams().
litecoinz_gtest_SOURCES = \
	gtest/main.cpp \
	gtest/utils.cpp \
	gtest/test_checktransaction.cpp \
	gtest/json_test_vectors.cpp \
	gtest/json_test_vectors.h
# These tests are order-dependent, because they
# depend on global state (see #1539)
if ENABLE_WALLET
litecoinz_gtest_SOURCES += \
	wallet/gtest/test_wallet_zkeys.cpp
endif
litecoinz_gtest_SOURCES += \
	gtest/test_tautology.cpp \
	gtest/test_deprecation.cpp \
	gtest/test_equihash.cpp \
	gtest/test_httprpc.cpp \
	gtest/test_joinsplit.cpp \
	gtest/test_keystore.cpp \
	gtest/test_noteencryption.cpp \
	gtest/test_mempool.cpp \
	gtest/test_merkletree.cpp \
	gtest/test_metrics.cpp \
	gtest/test_miner.cpp \
	gtest/test_pow.cpp \
	gtest/test_random.cpp \
	gtest/test_rpc.cpp \
	gtest/test_transaction.cpp \
	gtest/test_validation.cpp \
	gtest/test_circuit.cpp \
	gtest/test_txid.cpp \
	gtest/test_libzcash_utils.cpp \
	gtest/test_proofs.cpp \
	gtest/test_paymentdisclosure.cpp \
	gtest/test_checkblock.cpp
if ENABLE_WALLET
litecoinz_gtest_SOURCES += \
	wallet/gtest/test_wallet.cpp
endif

litecoinz_gtest_CPPFLAGS = $(AM_CPPFLAGS) -DBINARY_OUTPUT -DCURVE_ALT_BN128 -DSTATIC $(BITCOIN_INCLUDES)
litecoinz_gtest_CXXFLAGS = $(AM_CXXFLAGS) $(PIE_FLAGS)

litecoinz_gtest_LDADD = -lgtest -lgmock $(LIBBITCOIN_SERVER) $(LIBBITCOIN_CLI) $(LIBBITCOIN_COMMON) $(LIBBITCOIN_UTIL) $(LIBBITCOIN_CRYPTO) $(LIBUNIVALUE) $(LIBLEVELDB) $(LIBMEMENV) \
  $(BOOST_LIBS) $(BOOST_UNIT_TEST_FRAMEWORK_LIB) $(LIBSECP256K1)
if ENABLE_ZMQ
litecoinz_gtest_LDADD += $(LIBBITCOIN_ZMQ) $(ZMQ_LIBS)
endif
if ENABLE_WALLET
litecoinz_gtest_LDADD += $(LIBBITCOIN_WALLET)
endif

litecoinz_gtest_LDADD += $(LIBZCASH_CONSENSUS) $(BDB_LIBS) $(SSL_LIBS) $(CRYPTO_LIBS) $(EVENT_PTHREADS_LIBS) $(EVENT_LIBS) $(LIBZCASH) $(LIBSNARK) $(LIBZCASH_LIBS) $(CURL_LIBS)

if ENABLE_PROTON
litecoinz_gtest_LDADD += $(LIBBITCOIN_PROTON) $(PROTON_LIBS)
endif


litecoinz_gtest_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS) -static

litecoinz-gtest_check: litecoinz-gtest FORCE
	./litecoinz-gtest

litecoinz-gtest-expected-failures: litecoinz-gtest FORCE
	./litecoinz-gtest --gtest_filter=*DISABLED_* --gtest_also_run_disabled_tests
